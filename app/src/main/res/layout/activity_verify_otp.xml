<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.tigwal.ui.view_model.otp.VerifyOtpViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:id="@+id/llloginview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/clr_light_white"
        tools:context="com.tigwal.ui.activity.VerifyOtpActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:orientation="vertical">

                <include
                    android:id="@+id/toolBar"
                    layout="@layout/layout_toolbar" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPasswordTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/verify_otp_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPasswordMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/verify_otp_message"
                    android:textColor="@color/color_dark_gray"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:id="@+id/llPinView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"
                    android:orientation="horizontal">

                    <com.goodiebag.pinview.Pinview
                        android:id="@+id/pinviewOTP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cursorVisible="false"
                        app:forceKeyboard="false"
                        app:inputType="number"
                        app:password="true"
                        app:pinBackground="@drawable/backgrond_border_otp"
                        app:pinHeight="@dimen/dp_40"
                        app:pinLength="6"
                        app:pinWidth="@dimen/dp_25"
                        app:splitWidth="@dimen/dp_30"
                        app:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtDontReceiveCOde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold_midium_new"
                        android:text="@string/dont_receive_code"
                        android:textColor="@color/clr_gray"
                        android:textSize="@dimen/sp_11" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtResendOtp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:fontFamily="@font/poppins_bold_midium_new"
                        android:text="@string/resend_otp"
                        android:textColor="@color/color_blue_light"
                        android:textSize="@dimen/sp_11" />


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_35"
                    android:background="@drawable/border_button_blue_app"
                    android:fontFamily="@font/poppins_bold_midium_new"
                    android:text="@string/verify"
                    android:minHeight="@dimen/dp_40"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>