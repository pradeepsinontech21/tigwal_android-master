<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.tigwal.ui.view_model.profile.ProfileViewModel" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_light_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_20"
            android:orientation="vertical">

            <include
                android:id="@+id/toolBar"
                layout="@layout/layout_toolbar" />

            <LinearLayout
                android:id="@+id/llAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_30"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/img_profilePic"
                                    android:layout_width="@dimen/dp_80"
                                    android:layout_height="@dimen/dp_80"
                                    android:src="@drawable/default_profile"
                                    app:civ_border_color="@color/color_blue_light"
                                    app:civ_border_width="@dimen/dp_1" />

                                <RelativeLayout
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_90">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/iv_uploadImg"
                                        android:layout_width="@dimen/dp_30"
                                        android:layout_height="@dimen/dp_30"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginEnd="@dimen/dp_10"
                                        android:layout_marginBottom="@dimen/dp_10"
                                        android:background="@drawable/circle_blue_light_bg"
                                        android:padding="@dimen/dp_8"
                                        android:src="@drawable/ic_camera"
                                        android:tint="@color/white"
                                        android:visibility="gone" />
                                </RelativeLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtNameTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_13"
                                    android:visibility="visible" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtEmailTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_10"
                                    android:visibility="visible" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_35"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/et_profile_fullName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_gray_edittext_bg"
                                android:enabled="false"
                                android:fontFamily="@font/poppins_light"
                                android:hint="@string/full_name"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:paddingStart="@dimen/dp_15"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_15"
                                android:paddingBottom="@dimen/dp_10"
                                android:textColor="@color/black"
                                android:textColorHint="@color/color_gray_light"
                                android:textSize="@dimen/sp_11" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/et_profile_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:alpha="0.6"
                                android:background="@drawable/border_gray_edittext_bg"
                                android:enabled="false"
                                android:fontFamily="@font/poppins_light"
                                android:hint="@string/email"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:paddingStart="@dimen/dp_15"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_15"
                                android:paddingBottom="@dimen/dp_10"
                                android:textColor="@color/black"
                                android:textColorHint="@color/color_gray_light"
                                android:textSize="@dimen/sp_10" />

                            <RelativeLayout
                                android:id="@+id/rlMobileNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@drawable/border_gray_edittext_bg">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtSelectedCountryCode"
                                    android:layout_width="@dimen/dp_45"
                                    android:layout_height="@dimen/dp_40"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:fontFamily="@font/poppins_light"
                                    android:gravity="center"
                                    android:text="@string/default_country_code"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_10" />

                                <com.hbb20.CountryCodePicker
                                    android:id="@+id/countrypicker"
                                    android:layout_width="@dimen/dp_45"
                                    android:layout_height="@dimen/dp_40"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:alpha="0"
                                    android:fontFamily="@font/poppins_light"
                                    android:gravity="center"
                                    app:ccpDialog_allowSearch="true"
                                    app:ccpDialog_backgroundColor="@color/white"
                                    app:ccpDialog_searchEditTextTint="@color/color_primary"
                                    app:ccpDialog_showPhoneCode="true"
                                    app:ccpDialog_showTitle="false"
                                    app:ccp_clickable="false"
                                    app:ccp_contentColor="@color/black"
                                    app:ccp_showArrow="false"
                                    app:ccp_showFlag="false"
                                    app:ccp_showFullName="false"
                                    app:ccp_showNameCode="false"
                                    app:ccp_textSize="@dimen/sp_11" />

                                <View
                                    android:id="@+id/ViewCountryCode"
                                    android:layout_width="0.8dp"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_toEndOf="@+id/countrypicker"
                                    android:background="@color/grey" />

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/et_profile_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/ViewCountryCode"
                                    android:background="@color/transparent_color_full"
                                    android:enabled="false"
                                    android:fontFamily="@font/poppins_light"
                                    android:hint="@string/mobile_number"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:padding="@dimen/dp_10"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/color_gray_light"
                                    android:textSize="@dimen/sp_11" />
                            </RelativeLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@drawable/border_gray_edittext_bg"
                                android:enabled="false"
                                android:fontFamily="@font/poppins_light"
                                android:hint="@string/work_address"
                                android:imeOptions="actionDone"
                                android:inputType="textMultiLine"
                                android:maxLines="3"
                                android:paddingStart="@dimen/dp_15"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_15"
                                android:paddingBottom="@dimen/dp_10"
                                android:textColor="@color/black"
                                android:textColorHint="@color/color_gray_light"
                                android:textSize="@dimen/sp_11" />


                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/country"
                                    android:textSize="@dimen/sp_12" />

                                <RelativeLayout
                                    android:enabled="false"
                                    android:clickable="false"
                                    android:id="@+id/rlCountry"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/txtCountry"
                                        android:enabled="false"
                                        android:clickable="false"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/dp_5"
                                        android:fontFamily="@font/poppins_medium"
                                        android:hint="@string/your_country"
                                        android:paddingStart="@dimen/dp_5"
                                        android:paddingEnd="@dimen/dp_5"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/sp_11" />

                                </RelativeLayout>
                            </LinearLayout>


                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/gender"
                                    android:textSize="@dimen/sp_12" />

                                <RelativeLayout
                                    android:enabled="false"
                                    android:clickable="false"
                                    android:id="@+id/rlGender"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/txtGender"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/dp_5"
                                        android:fontFamily="@font/poppins_medium"
                                        android:hint="Male"
                                        android:enabled="false"
                                        android:clickable="false"
                                        android:paddingStart="@dimen/dp_5"
                                        android:paddingEnd="@dimen/dp_5"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/sp_11" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/imgGender"
                                        android:layout_width="@dimen/dp_14"
                                        android:visibility="gone"
                                        android:layout_height="@dimen/dp_14"
                                        android:layout_alignParentEnd="true"
                                        android:src="@drawable/img_gender" />
                                </RelativeLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/birthdate"
                                    android:textSize="@dimen/sp_12" />

                                <RelativeLayout
                                    android:enabled="false"
                                    android:clickable="false"
                                    android:id="@+id/rlBirthdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/txtDate"
                                        android:enabled="false"
                                        android:clickable="false"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/dp_5"
                                        android:fontFamily="@font/poppins_medium"
                                        android:hint="yyyy-MM-dd"
                                        android:paddingStart="@dimen/dp_5"
                                        android:paddingEnd="@dimen/dp_5"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/sp_11" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/imgCalender"
                                        android:layout_width="@dimen/dp_14"
                                        android:layout_height="@dimen/dp_14"
                                        android:layout_alignParentEnd="true"
                                        android:src="@drawable/ic_calendar" />
                                </RelativeLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:background="@drawable/border_button_blue_app"
                            android:fontFamily="@font/poppins_bold_midium_new"
                            android:minHeight="@dimen/dp_40"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/update"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnDeleteUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:background="@drawable/border_button_blue_app"
                            android:fontFamily="@font/poppins_bold_midium_new"
                            android:minHeight="@dimen/dp_40"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/delete_account"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12"
                            android:visibility="visible" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>