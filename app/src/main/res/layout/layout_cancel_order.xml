<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolBar"
        layout="@layout/layout_toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_20"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="@dimen/dp_7"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_profile_edittext">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/dp_7">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/order_id"
                                    android:textSize="@dimen/sp_12"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/grey" />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txt_cancel_orderId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sample_id"
                                    android:textSize="@dimen/sp_12"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/black"
                                    android:layout_marginStart="@dimen/dp_5"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:padding="@dimen/dp_5"
                                    android:src="@drawable/ic_calendar"
                                    android:tint="@color/grey"
                                    android:layout_gravity="center_vertical"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txt_cancel_orderDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sample_date"
                                    android:textSize="@dimen/sp_8"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/grey"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_5"/>

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_items"
                                    android:textSize="@dimen/sp_12"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/grey" />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txt_cancel_totalOrder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/four"
                                    android:textSize="@dimen/sp_12"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/black"
                                    android:layout_marginStart="@dimen/dp_5"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:padding="@dimen/dp_3"
                                    android:src="@drawable/ic_clock" />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txt_cancel_orderTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/four"
                                    android:textSize="@dimen/sp_12"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/grey"
                                    android:layout_marginStart="@dimen/dp_5"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>