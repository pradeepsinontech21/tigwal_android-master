<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_light_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_20"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_user"
            app:tint="@color/black" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtSignUpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/name_with_star"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingEnd="@dimen/dp_10"
            android:textColor="@color/black"
            android:textColorHint="@color/color_gray_light"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCall"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_call"
            app:tint="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSelectedCountryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgCall"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/default_country_code"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            android:visibility="visible" />

        <com.hbb20.CountryCodePicker
            android:id="@+id/countrypicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgCall"
            android:alpha="0"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            app:ccpDialog_allowSearch="true"
            app:ccpDialog_backgroundColor="@color/white"
            app:ccpDialog_searchEditTextTint="@color/color_primary"
            app:ccpDialog_showPhoneCode="true"
            app:ccpDialog_showTitle="false"
            app:ccp_contentColor="@color/black"
            app:ccp_defaultNameCode="OM"
            app:ccp_showArrow="false"
            app:ccp_showFlag="false"
            app:ccp_showFullName="false"
            app:ccp_showNameCode="false"
            app:ccp_textSize="@dimen/sp_12" />

        <View
            android:id="@+id/ViewCountryCode"
            android:layout_width="0.8dp"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/countrypicker"
            android:background="@color/grey" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtSignUpNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/ViewCountryCode"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/mobile_number_with_star"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingEnd="@dimen/dp_10"
            android:textColor="@color/black"
            android:textColorHint="@color/color_gray_light"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_email"
            app:tint="@color/black" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtSignUpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/email_id"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingEnd="@dimen/dp_10"
            android:textColor="@color/black"
            android:textColorHint="@color/color_gray_light"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey" />

    <LinearLayout
        android:id="@+id/llPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_password"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_lock"
            app:tint="@color/black" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtSignUpPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/password_hint"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:paddingEnd="@dimen/dp_10"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textColorHint="@color/color_gray_light"
            android:textSize="@dimen/sp_12"
            tools:ignore="RtlCompat" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSignUpPassword"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_pwd_hide"
            android:tag="SHOW"
            android:visibility="visible"
            app:tint="@color/color_blue_light" />

    </LinearLayout>

    <View
        android:id="@+id/viewPassword1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/passwordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="-10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/password_message"
        android:textColor="@color/red_dark"
        android:textSize="@dimen/sp_10"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_lock"
            app:tint="@color/black" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtSignUpConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/con_password_hint"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingEnd="@dimen/dp_10"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textColorHint="@color/color_gray_light"
            android:textSize="@dimen/sp_12"
            tools:ignore="RtlCompat" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSignUpConfirmPassword"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_pwd_hide"
            android:tag="SHOW"
            android:visibility="visible"
            app:tint="@color/color_blue_light" />

    </LinearLayout>

    <View
        android:id="@+id/viewPassword"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_5"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chkIAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-6dp"
            android:buttonTint="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:text="@string/iagree"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTermsConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/customer_aggrement"
            android:textColor="@color/color_blue_light"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSkipSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/poppins_medium"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/skip"
            android:textColor="@color/color_blue_light"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/border_button_blue_app"
        android:fontFamily="@font/poppins_bold_midium_new"
        android:minHeight="@dimen/dp_40"
        android:text="@string/signup"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

</LinearLayout>