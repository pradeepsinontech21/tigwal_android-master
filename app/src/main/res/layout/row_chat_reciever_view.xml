<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llReceiverView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:visibility="gone"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profilePic"
            android:layout_width="@dimen/dp_35"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/dp_35"
            android:src="@drawable/default_profile"
            android:layout_marginEnd="@dimen/dp_8"
            app:civ_border_color="@color/LightBlue"
            app:civ_border_width="@dimen/dp_1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chat_reciever_view"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_8"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_5">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtReceiverName"
                android:layout_marginStart="@dimen/dp_5"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtReceiverDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start"
                android:layout_marginStart="@dimen/dp_5"
                android:orientation="horizontal"
                android:text=""
                android:textColor="@color/color_chat_time_color"
                android:textSize="@dimen/sp_9" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>