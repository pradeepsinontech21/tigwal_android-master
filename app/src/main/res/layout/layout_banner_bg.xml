<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSearchView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_140"
    android:layout_marginStart="@dimen/dp_1"
    android:layout_marginEnd="@dimen/dp_1">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgDummyAds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_banner_dummy"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/rlBannerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgLeft"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentStart="true"
                android:background="@drawable/round_trans_border_gray"
                android:padding="@dimen/dp_8"
                android:src="@drawable/arrow_back" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgRight"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:background="@drawable/round_trans_border_gray"
                android:padding="@dimen/dp_8"
                android:src="@drawable/arrow_next" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/border_dialoge_view"
            android:elevation="@dimen/dp_5">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtRateCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginBottom="-2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="5"
                android:textColor="@color/color_blue_light"
                android:textSize="@dimen/sp_9" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_10"
                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_star" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:padding="@dimen/dp_10">

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@android:color/holo_blue_light"
            app:dotsSize="10dp"
            app:dotsSpacing="5dp"
            app:selectedDotColor="@android:color/holo_blue_dark" />
    </RelativeLayout>
</RelativeLayout>
