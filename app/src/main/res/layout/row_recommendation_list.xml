<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/dp_10"
    >

    <RelativeLayout
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_140">

        <RelativeLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_140">

            <com.tigwal.utils.RoundRectCornerImageView
                android:id="@+id/imgProduct"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_140"
                android:background="@drawable/img_placeholder"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentBottom="true"
                android:background="@drawable/img_bluer_bg" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/dp_8"
                android:textColor="@color/white" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:elevation="@dimen/dp_3"
            android:background="@drawable/border_rating_bg">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtRateCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginBottom="-2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/default_zero"
                android:textColor="@color/color_blue_light"
                android:textSize="@dimen/sp_9" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_5"
                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_star" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>