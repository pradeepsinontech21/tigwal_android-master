<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSearchView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:visibility="gone"
    android:background="@color/clr_light_white"
    app:cardCornerRadius="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rlBannerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layoutDirection="ltr">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgLeft"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/round_trans_border_gray"
                    android:padding="@dimen/dp_8"
                    android:src="@drawable/arrow_back"
                    android:layoutDirection="ltr"/>


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgRight"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/round_trans_border_gray"
                    android:padding="@dimen/dp_8"
                    android:src="@drawable/arrow_next"
                    android:layoutDirection="ltr"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/border_dialoge_view"
                android:elevation="@dimen/dp_3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtRateCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginBottom="-2dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="5"
                    android:textColor="@color/color_blue_light"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/ic_star" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>