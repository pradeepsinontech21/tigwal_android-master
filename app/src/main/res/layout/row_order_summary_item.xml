<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/background_profile_edittext"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <com.tigwal.utils.RoundRectCornerImageView
            android:id="@+id/iv_order_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:scaleType="fitXY"
            android:src="@drawable/img_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_order_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/color_blue_light"
                        android:textSize="@dimen/sp_10" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_productStar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/default_zero"
                        android:textColor="@color/color_blue_light"
                        android:textSize="@dimen/sp_10" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgStar"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_2"
                        android:padding="@dimen/dp_1"
                        android:src="@drawable/ic_star" />
                </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtServiceProviderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_order_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_10" />

                <LinearLayout
                    android:id="@+id/llDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/discount"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/sp_10" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:fontFamily="@font/poppins_bold_midium_new"
                        android:text="@string/default_zero"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtTimeSlotTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/time_slot"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/sp_10" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtTimeSlotFinal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:fontFamily="@font/poppins_bold_midium_new"
                        android:text="@string/default_zero"
                        android:textColor="@color/color_blue_light"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/quantity_title"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/sp_10" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_order_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_3"
                            android:fontFamily="@font/poppins_bold_midium_new"
                            android:text="@string/default_zero"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llRatingView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dp_2"
                            android:src="@drawable/ic_star"
                            android:tint="@color/color_blue_light" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtRatingTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_3"
                            android:layout_marginTop="@dimen/dp_1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_vertical"
                            android:text="@string/add_rating"
                            android:textColor="@color/color_blue_light"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/price"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/sp_10" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_order_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_3"
                            android:fontFamily="@font/poppins_bold_midium_new"
                            android:text="@string/sample_price"
                            android:textColor="@color/color_blue_light"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llChatView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dp_2"
                            android:src="@drawable/ic_chat_fill"
                            android:tint="@color/color_blue_light" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtChat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_3"
                            android:layout_marginTop="@dimen/dp_1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_vertical"
                            android:text="@string/chat"
                            android:textColor="@color/color_blue_light"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>